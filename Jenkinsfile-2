pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image --no-progress --exit-code 1 --severity HIGH,CRITICAL java-web-app:latest'
      }
    }
  }
}
