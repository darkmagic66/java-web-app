pipeline {
  agent any  
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }

  environment {
    DOCKERHUB_CREDENTIAL = credentials('docker-hub-credential')
  }  

  stages {
    stage('Build') {
      steps {
        sh 'docker build -t java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image --no-progress --exit-code 0 --severity MEDIUM,HIGH,CRITICAL java-web-app:latest'
      }
    }
    stage("Push") {
      steps {
        sh 'echo  $DOCKERHUB_CREDENTIAL_PSW | docker login -u $DOCKERHUB_CREDENTIAL_USR --password-stdin'
        sh 'docker push java-web-app:latest'
      }
    }
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}
