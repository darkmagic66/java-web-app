pipeline {
  agent any  
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }

  environment {
    DOCKERHUB_CREDENTIAL = credentials('docker-hub-credential')
  }  

  stages {
    stage('Build') {
      steps {
        sh 'docker build -t owlee666666/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image --no-progress --exit-code 0 --severity MEDIUM,HIGH,CRITICAL owlee666666/java-web-app:latest'
      }
    }
    stage("Push") {
      steps {
        // sh 'echo  $DOCKERHUB_CREDENTIAL_PSW | docker login -u $DOCKERHUB_CREDENTIAL_USR --password-stdin'
        // sh 'docker push java-web-app:latest'
        sh 'docker context use default'
        sh 'echo $DOCKERHUB_CREDENTIAL_PSW | docker login -u $DOCKERHUB_CREDENTIAL_USR --password-stdin'
        withDockerRegistry([ credentialsId: "docker-hub-credential", url: "https://registry.hub.docker.com" ]) {
        //   sh 'docker push java-web-app:latest'
        //       }
        sh 'docker push owlee666666/java-web-app:latest'
    }
  }
}
stage('Deploy') {
  agent {
    docker {
      image 'owlee666666/java-web-app:latest'
      registryUrl 'https://registry.hub.docker.com'
      registryCredentialsId 'docker-hub-credential'
    }
  }
  steps {
    sh 'echo "The application is now running"'
  }
}
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}
